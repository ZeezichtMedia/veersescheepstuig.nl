---
/**
 * AccommodationCard Component
 * Card met afbeelding en titel voor accommodatie types
 * 
 * @param title - Titel (bijv. "Kampeerplaatsen")
 * @param image - Cloudinary image URL
 * @param link - Link naar detail pagina
 * @param linkText - Tekst voor de link (default: "Meer info")
 * @param overlayOpacity - Overlay donkerheid 0-100 (default: 40)
 */

interface Props {
  title: string;
  image: string;
  link: string;
  linkText?: string;
  overlayOpacity?: number;
}

const { title, image, link, linkText = "Meer info", overlayOpacity = 40 } = Astro.props;
---

<a 
  href={link}
  class="group relative block overflow-hidden rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1"
>
  <!-- Image -->
  <div class="aspect-[4/3] overflow-hidden">
    <img 
      src={image}
      alt={title}
      class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
      loading="lazy"
    />
  </div>
  
  <!-- Overlay met titel -->
  <div 
    class="absolute inset-0 flex items-end"
    style={`background: linear-gradient(to top, rgba(0,0,0,${overlayOpacity / 100 * 0.8}), rgba(0,0,0,${overlayOpacity / 100 * 0.4}), transparent)`}
  >
    <div class="p-6 w-full">
      <h3 class="text-2xl font-bold text-white mb-2">
        {title}
      </h3>
      <span class="text-white/90 text-sm flex items-center">
        {linkText}
        <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </span>
    </div>
  </div>
</a>
