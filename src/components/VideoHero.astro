---
/**
 * VideoHero Component
 * Herbruikbare hero sectie met video achtergrond
 * 
 * @param title - Hoofdtitel
 * @param subtitle - Ondertitel/tagline
 * @param videoSrc - Pad naar video bestand
 * @param posterSrc - Poster afbeelding (fallback)
 * @param ctaText - Call-to-action button tekst
 * @param ctaLink - Call-to-action button link
 */

interface Props {
  title: string;
  subtitle: string;
  videoSrc: string;
  posterSrc?: string;
  ctaText?: string;
  ctaLink?: string;
}

const { 
  title, 
  subtitle, 
  videoSrc, 
  posterSrc = '/images/hero-poster.jpg',
  ctaText = 'Meer informatie',
  ctaLink = '#content'
} = Astro.props;
---

<!-- Video Hero Section -->
<section class="relative h-screen flex items-center justify-center overflow-hidden">
  <!-- Video Background (Optimized for all devices) -->
  {videoSrc && (
    <video
      autoplay
      muted
      loop
      playsinline
      poster={posterSrc}
      preload="none"
      class="absolute inset-0 w-full h-full object-cover hero-video"
    >
      <source src={videoSrc} type="video/webm" />
      <source src={videoSrc.replace('.webm', '.mp4')} type="video/mp4" />
    </video>
  )}

  <!-- Fallback Image (Shows while video loads) -->
  <img 
    src={posterSrc} 
    alt="Hero afbeelding"
    class="absolute inset-0 w-full h-full object-cover"
    style="z-index: -1;"
    loading="eager"
  />

  <!-- Dark Overlay with gradient -->
  <div class="absolute inset-0 bg-gradient-to-b from-black/70 via-black/60 to-black/80"></div>
  
  <!-- Decorative wave pattern overlay -->
  <div class="absolute inset-0 opacity-10">
    <svg class="w-full h-full" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320" preserveAspectRatio="none">
      <path fill="#ffffff" fill-opacity="1" d="M0,96L48,112C96,128,192,160,288,160C384,160,480,128,576,122.7C672,117,768,139,864,138.7C960,139,1056,117,1152,117.3C1248,117,1344,139,1392,149.3L1440,160L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"></path>
    </svg>
  </div>

  <!-- Hero Content -->
  <div class="relative z-10 text-center px-4 max-w-5xl mx-auto">
    <!-- Small badge above title -->
    <div class="inline-block mb-6 px-6 py-2 bg-white/10 backdrop-blur-sm rounded-full border border-white/20">
      <span class="text-white/90 text-sm md:text-base font-medium tracking-wide">ðŸŽµ Sinds 1999</span>
    </div>
    
    <h1 class="text-5xl md:text-7xl lg:text-8xl font-bold text-white mb-6 drop-shadow-2xl leading-tight" set:html={title} />
    
    <p class="text-xl md:text-2xl lg:text-3xl text-white/95 mb-10 max-w-3xl mx-auto drop-shadow-lg leading-relaxed">
      {subtitle}
    </p>

    {ctaText && ctaLink && (
      <a 
        href={ctaLink}
        class="inline-block bg-primary hover:bg-primary-700 text-white font-bold px-12 py-6 rounded-2xl text-lg md:text-xl transition-all transform hover:scale-105 shadow-2xl hover:shadow-primary/50 border-2 border-primary-400"
      >
        {ctaText}
        <svg class="inline-block ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </a>
    )}
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 z-10">
    <a href="#content" class="block animate-bounce" aria-label="Scroll naar beneden">
      <svg class="w-8 h-8 text-white/80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </a>
  </div>
</section>
