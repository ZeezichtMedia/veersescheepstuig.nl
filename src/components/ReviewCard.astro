---
/**
 * ReviewCard Component
 * Herbruikbare review/testimonial kaart
 * 
 * @param name - Naam van reviewer
 * @param text - Review tekst
 * @param rating - Rating (1-5 sterren)
 * @param source - Bron (bijv. "Via Google", "Via Zoover")
 */

interface Props {
  name: string;
  text: string;
  rating?: number;
  source?: string;
}

const { name, text, rating = 5, source } = Astro.props;
---

<div class="bg-white p-6 rounded-xl shadow-lg hover:shadow-xl transition-shadow h-full flex flex-col">
  <!-- Author & Stars -->
  <div class="mb-4">
    <p class="font-semibold text-gray-900 mb-2">{name}</p>
    {source && <p class="text-sm text-gray-500 mb-3">{source}</p>}
    
    <!-- Stars in Primary Color -->
    <div class="flex text-primary">
      {Array.from({ length: 5 }).map((_, i) => (
        <svg 
          class={`w-5 h-5 ${i < rating ? 'fill-current' : 'fill-gray-300'}`} 
          viewBox="0 0 20 20"
        >
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
        </svg>
      ))}
    </div>
  </div>

  <!-- Review Text -->
  <p class="text-gray-700 flex-grow leading-relaxed">
    "{text}"
  </p>
</div>
